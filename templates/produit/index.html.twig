{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit!{% endblock %}

{% block stylesheets %}
    <style>
        .example-wrapper {
            margin: 0 auto 50px;
            width: 500px;
            padding: 20px;
            background-color: #f6d9c1;
            border-radius: 5px;
        }

        .example-wrapper label {
            display: block;
            margin-bottom: 10px;
        }

        .example-wrapper input[type="text"],
        .example-wrapper textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .example-wrapper button {
            background-color: #f6f6f6;
            color: #000;
            padding: 10px 20px;
            margin-top:10px ;
            border: none;
            border-radius: 5px;
            text-align: center;
            margin-left: 390px;
            cursor: pointer;
        }
      
    </style>
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_widget(form) }}

 
        {{ form_end(form) }}
    </div>
{% endblock %}
